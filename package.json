{
  "name": "@randy888chan/stigmergy",
  "version": "5.1.0",
  "description": "Pheromind: The Autonomous AI Development Workshop.",
  "main": "tools/installer/cli.js",
  "bin": {
    "stigmergy": "tools/installer/cli.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "node tools/cli.js build",
    "build:web": "node tools/cli.js build:web",
    "list:agents": "node tools/cli.js list:agents",
    "validate:agents": "node tools/cli.js validate:agents",
    "setup": "node tools/installer/cli.js install",
    "format": "prettier --write \"**/*.{md,js,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{md,js,json,yml,yaml}\"",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.2",
    "inquirer": "^9.3.2",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1"
  },
  "keywords": [
    "stigmergy",
    "pheromind",
    "agile",
    "ai",
    "orchestrator",
    "development",
    "methodology",
    "agents",
    "swarm",
    "autonomous"
  ],
  "author": "Randy Chan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/randy888chan/Stigmergy.git",
    "directory": "."
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "semantic-release": "^24.0.0"
  },
  "lint-staged": {
    "**/*.{md,js,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
